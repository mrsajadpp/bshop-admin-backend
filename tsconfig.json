{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",  // Set base URL for module resolution
    "paths": {
      "@/*": ["*"] // Define the alias '@' to point to the root of the src directory
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
